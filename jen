pipeline {
    agent any

    environment {
        RECIPIENT_EMAIL = 'anjiladlee10@gmail.com'  // Replace with the developer's email address
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building the code using Maven...'
                // Tool: Maven
            }
        }

        stage('Unit and Integration Tests') {
            steps {
                echo 'Running unit tests with JUnit...'
                echo 'Running integration tests with JUnit...'
                // Tool: JUnit
            }
        }

        stage('Code Analysis') {
            steps {
                echo 'Analyzing code quality with SonarQube...'
                // Tool: SonarQube
            }
        }

        stage('Security Scan') {
            steps {
                echo 'Performing security scan with OWASP Dependency Check...'
                // Tool: OWASP Dependency Check
            }
        }

        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to staging environment on AWS EC2...'
                // Tool: AWS CLI or other deployment tool
            }
        }

        stage('Integration Tests on Staging') {
            steps {
                echo 'Running integration tests on staging environment with JUnit...'
                // Tool: JUnit or Selenium for end-to-end tests
            }
        }

        stage('Deploy to Production') {
            steps {
                echo 'Deploying to production environment on AWS EC2...'
                // Tool: AWS CLI or other deployment tool
            }
        }
    }

    post {
        always {
            script {
                def status = currentBuild.result ?: 'SUCCESS'
                if (status == 'SUCCESS') {
                    emailext (
                        to: "${env.RECIPIENT_EMAIL}",
                        subject: "Jenkins Pipeline: Successful Build",
                        body: "The build was successful.",
                        attachLog: true
                    )
                } else {
                    emailext (
                        to: "${env.RECIPIENT_EMAIL}",
                        subject: "Jenkins Pipeline: Build Failed",
                        body: "The build failed.",
                        attachLog: true
                    )
                }
            }
        }
    }
}
